
<% if signed_in? %>

  <%= form_for :session, url: signout_path, method: 'delete' do |f| %>
    Signed in as <%= link_to current_user.name, current_user %>
    <%= f.submit "Sign out", id: 'signout', class: 'session-btn' %>
  <% end %>

<% else %>

  <%= link_to "Sign In", signin_path, class: 'session-btn' %>
  <%= link_to "Sign up", signup_path, class: 'session-btn' %>

<% end %>

